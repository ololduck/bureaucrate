# Maintainer: Paul Ollivier <contact paulollivier.fr>

pkgname=bureaucrate-git
_pkgname=bureaucrate
pkgver=0.3.3
pkgrel=1
pkgdesc="A maildir utility to sort mails"
arch=('any')
url='https://github.com/paulollivier/bureaucrate'
license=('MIT')
depends=('python')
source=("git://github.com/paulollivier/bureaucrate#tag=v${pkgver}")
sha1sums=('SKIP')

pkgver() {
    cd "$srcdir/$_pkgname"
    git describe --tags | sed 's/^v//g' | sed 's/\([^-]*-\)g/r\1/;s/-/./g'
}

build() {
    cd "$srcdir/$_pkgname"
    python setup.py build
}

package() {
    cd "$srcdir/$_pkgname"
    python setup.py install --root="${pkgdir}"
}

